<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="FlexTable Plugin Test Suite">
    <listeners>
        <listener class-name="FlexTablePlugin.Report.TestListener"/>
    </listeners>

    <test name="FlexTable Automation Test Cases" preserve-order="true">
        <classes>

            <!-- Test Case 1: WordPress Admin Login -->
            <class name="FlexTablePlugin.TestCases.AdminLoginPageTest"/>
            <class name="FlexTablePlugin.TestCases.DashboardPageTest"/>

            <!-- Test Case 2: Plugin Installation -->
            <class name="FlexTablePlugin.TestCases.WpPluginDirectoryPageTest"/>
            <class name="FlexTablePlugin.TestCases.InstalledPluginsPageTest"/>

            <!-- Test Case 3: FlexTable Dashboard -->
            <class name="FlexTablePlugin.TestCases.FlexTableDashboardTest"/>

            <!-- Test Case 4: Create New Table -->
            <class name="FlexTablePlugin.TestCases.CreateNewTablePageTest"/>

            <!-- Test Case 5: Shortcode Rendering and Data Validation -->
            <class name="FlexTablePlugin.TestCases.TestPageForTableValidationTest"/>

            <!-- Test Case 6: Table Title and Description Display -->
            <class name="FlexTablePlugin.TestCases.TestPageForTableTitleAndDescriptionValidationTest"/>

            <!-- Test Case 7: Entry Info, Pagination, and Layout Validation -->
            <class name="FlexTablePlugin.TestCases.TestPageForTableEntryInfoAndPaginationValidationTest"/>

            <!-- Test Case 8: Rows Per Page and Table Height Customization -->
            <class name="FlexTablePlugin.TestCases.TestPageForValidateUpdateRowAndTableHeightTest"/>

            <!-- Test Case 9: Table Deletion and Empty State -->
            <class name="FlexTablePlugin.TestCases.TestPageForVerifyDeleteTableAndFrontendRemovalTest"/>

        </classes>
    </test>
</suite>